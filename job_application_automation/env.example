# Job Application Automation - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Configuration (Gemini API)
# =============================================================================
LLM_PROVIDER="gemini"
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL="gemini-pro"

# Model Settings
TEMPERATURE=0.7
MAX_TOKENS=4000
TOP_P=0.95
TOP_K=40

# Safety Settings
HARM_CATEGORY_HARASSMENT="BLOCK_NONE"
HARM_CATEGORY_HATE_SPEECH="BLOCK_NONE"
HARM_CATEGORY_SEXUALLY_EXPLICIT="BLOCK_NONE"
HARM_CATEGORY_DANGEROUS_CONTENT="BLOCK_NONE"

# API Configuration
USE_API=true
API_BASE_URL="https://generativelanguage.googleapis.com/v1beta"

# =============================================================================
# LinkedIn Configuration
# =============================================================================
LINKEDIN_EMAIL="your_linkedin_email@example.com"
LINKEDIN_PASSWORD="your_linkedin_password"
LINKEDIN_CLIENT_ID="your_linkedin_client_id"
LINKEDIN_CLIENT_SECRET="your_linkedin_client_secret"
LINKEDIN_REDIRECT_URI="http://localhost:8000/callback"

# LinkedIn MCP Settings
LINKEDIN_MCP_ENABLED=true
LINKEDIN_AUTO_APPLY=false

# =============================================================================
# Browser Automation Settings
# =============================================================================
BROWSER_TYPE="chromium"
BROWSER_HEADLESS=true
BROWSER_USE_API_KEY="your_browser_use_api_key"
DEFAULT_PHONE_NUMBER="+1-555-123-4567"
STEALTH_MODE=false

# =============================================================================
# Web Scraping Configuration (Crawl4AI)
# =============================================================================
CRAWL4AI_STRATEGY="playwright"
CRAWL4AI_DEEP_CRAWLING=true
CRAWL4AI_CRAWLING_STRATEGY="bestfirst"
CRAWL4AI_MAX_PAGES=10
CRAWL4AI_MAX_DEPTH=3
CRAWL4AI_RATE_LIMIT=1.0
CRAWL4AI_RESPECT_ROBOTS=true
CRAWL4AI_OUTPUT_FORMAT="markdown"
CRAWL4AI_BROWSER_PROFILE=""

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="sqlite:///data/job_applications.db"

# =============================================================================
# Application Settings
# =============================================================================
MAX_APPLICATIONS_PER_RUN=5
MIN_MATCH_SCORE=0.7
DEFAULT_ATS_THRESHOLD=0.75

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL="INFO"
LOG_FORMAT="standard"
CONSOLE_LOGGING=true
FILE_LOGGING=true

# =============================================================================
# Security Settings
# =============================================================================
ENCRYPT_SENSITIVE_DATA=true
USE_KEYRING=true
SECURE_DELETE=true

# =============================================================================
# Alternative LLM Providers (Optional)
# =============================================================================
# OpenAI (Alternative to Gemini)
# OPENAI_API_KEY="your_openai_api_key"
# OPENAI_MODEL="gpt-4"

# Groq (Alternative to Gemini)
# GROQ_API_KEY="your_groq_api_key"
# GROQ_MODEL="llama3-8b-8192"

# OpenRouter (Alternative to Gemini)
# OPENROUTER_API_KEY="your_openrouter_api_key"
# OPENROUTER_MODEL="meta-llama/llama-3-8b-instruct"

# GitHub Models (Alternative to Gemini)
# GITHUB_TOKEN="your_github_personal_access_token_with_models_scope"
# LLAMA_API_MODEL="meta/Llama-4-Maverick-17B-128E-Instruct-FP8"

